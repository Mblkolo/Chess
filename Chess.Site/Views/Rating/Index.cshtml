@using Chess.Site.Infrastructure

@model RatingViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Рейтинг игроков</h2>
<div class="row ">
    <div class="col-md-3">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Игрок</th>
                <th>Рейтинг</th>
            </tr>
            </thead>
            @foreach (var rating in Model.Rating)
            {
                <tr>
                    <td>@rating.Name</td>
                    <td>@rating.Points</td>
                </tr>
            }

        </table>
    </div>
</div>

<form method="post">
    <div class="row">
        <div class="col-md-3">
            <select asp-for="WhitePlayer" asp-items="Model.Players" id="whitePlayer" class="form-control col-md-3"></select>
        </div>
        <div class="col-md-3">
            <select asp-for="WhitePlayer" asp-items="Model.Players" id="blackPlayer" class="form-control col-md-3"></select>
        </div>
        <div class="col-md-3">
            <select asp-for="Winner" asp-items="Html.GetEnumSelectList<Winner>()" class="form-control" id="result col-md-3"></select>
        </div>
        <input type="submit" value="Добавить" class="btn btn-success" />
    </div>
</form>

<h2>Последнии игры</h2>
<div class="row ">
    <div class="col-md-5">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Белые</th>
                    <th>Чёрные</th>
                    <th>Результат</th>
                </tr>
            </thead>
            @foreach (var rating in Model.LatestResults)
            {
                <tr>
                    <td>@rating.WhitePlayer</td>
                    <td>@rating.BlackPlayer</td>
                    <td>@rating.Result.EnumDisplayNameFor()</td>
                </tr>
            }

        </table>
    </div>
</div>
